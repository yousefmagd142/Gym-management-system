@model Gym_System.ViewModel.FreezeVM

<h2>Freeze Membership</h2>

<div class="row">
    <div class="col-6">
<form asp-action="Index" method="post">
    <div class="form-group">
        <label for="UserId">Select Client:</label>
        <select id="UserId" asp-items="Model.ClientsList" name="UserId" class="form-control select2">
            <option value="">-- Select a Client --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="FreezeDays">Freeze Duration (Days):</label>
        <input asp-for="FreezeDays" type="number" class="form-control" placeholder="Enter number of days" required>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Freeze Membership</button>
</form>
    </div>
</div>
