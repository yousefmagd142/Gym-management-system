@model TransactionViewModel

@{
    ViewData["Title"] = "Create Transaction";
}
<body class="bgimg">

<div class="row">
    <!-- Create Transaction Form -->
    <div class="col-6">
        <h2>Create Transaction</h2>
        <form id="createForm" asp-action="AddTransaction" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label asp-for="Paid"></label>
                <input asp-for="Paid" class="form-control" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateTime"></label>
                <input asp-for="DateTime" type="datetime-local" class="form-control" value="@Model.DateTime.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="UserId">Name:</label>
                <select id="addform" asp-for="UserId" class="form-control" asp-items="@(ViewBag.Users as List<SelectListItem>)">
                    <option value="">-- Select User --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-2">Create</button>
        </form>
    </div>
</div>
</body>